<%= erb :'/partials/navbar' %>

<h1> this is the questions page </h1>


<div class='questions-container'>
  <% @questions.each do |question| %>

    <article id="<%= question.id %>">
      <form method="post" action='/questions/<%= question.id %>/upvote' class="inline">
        <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
      </form>
      <form method="post" action='/questions/<%= question.id %>/downvote' class="inline">
        <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button downvote-button"></button>
      </form>
      <h2><%= question.question %></h2><a class="answerbtn" href="/answers/<%= question.id %>"> answer</a>
      <a class="commentbtn" href="/comments/<%= question.id %>"> comment</a>
      <a class="deletebtn" href="/delete/<%= question.id %>"> delete</a>
      <p>
        <span class='points'><%= question.votes.sum("votes") %></span>
        <span class='username'><%= question.user.username %></span>
        <span class='timestamp'><%= question.created_at %></span>
        <span class='comment-count'><%= question.comments.count %></span>
        <a class="delete" href='/question/<%= question.id %>'></a>
      </p>
    </article>

  <% end %>
</div>
